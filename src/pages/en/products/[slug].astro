---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map(product => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { Content } = await product.render();
---

<BaseLayout title={product.data.title} description={product.data.description}>
  <article class="product-detail">
    <header class="product-header">
      <a href="/en/products/" class="back-link">← Back to all beers</a>
      <div class="product-meta">
        <span class="product-style">{product.data.style}</span>
        <span class="product-rating">★ {product.data.rating} / 5</span>
      </div>
      <h1>{product.data.title}</h1>
      <p class="product-description">{product.data.description}</p>

      <div class="product-stats">
        <div class="stat">
          <span class="stat-value">{product.data.abv}%</span>
          <span class="stat-label">ABV</span>
        </div>
        <div class="stat">
          <span class="stat-value">{product.data.calories}</span>
          <span class="stat-label">Calories</span>
        </div>
        <div class="stat">
          <span class="stat-value">${product.data.price}</span>
          <span class="stat-label">6-pack</span>
        </div>
      </div>

      <div class="flavor-profile">
        <strong>Flavor Profile:</strong>
        <div class="flavor-tags">
          {product.data.flavor_profile.map(flavor => (
            <span class="flavor-tag">{flavor}</span>
          ))}
        </div>
      </div>
    </header>

    <div class="product-content">
      <Content />
    </div>

    {!product.data.available && (
      <div class="availability-notice">
        <p>⚠️ This beer is currently unavailable. Check back soon!</p>
      </div>
    )}
  </article>
</BaseLayout>

<style>
  .product-detail {
    max-width: 800px;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1.5rem;
    color: var(--color-text-light);
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .product-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .product-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  .product-style {
    background: var(--color-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .product-rating {
    color: var(--color-secondary);
    font-weight: 600;
  }

  .product-description {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  .product-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .flavor-profile {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .flavor-tags {
    display: flex;
    gap: 0.5rem;
  }

  .flavor-tag {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
  }

  .product-content {
    line-height: 1.8;
  }

  .product-content :global(h2) {
    margin-top: 2rem;
  }

  .product-content :global(h3) {
    color: var(--color-primary);
  }

  .product-content :global(ul) {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .product-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .availability-notice {
    margin-top: 2rem;
    padding: 1rem;
    background: #fff3cd;
    border: 1px solid #ffc107;
    border-radius: 8px;
  }

  .availability-notice p {
    margin: 0;
  }
</style>
